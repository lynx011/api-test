<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    app:cardCornerRadius="4dp"
    android:elevation="40dp"
    android:layout_marginVertical="6dp"
    android:layout_marginHorizontal="10dp"
    android:paddingTop="8dp"
    android:layout_alignParentStart="true"
    android:layout_height="170dp"
    tools:ignore="InOrMmUsage">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_height="200dp">
        <androidx.cardview.widget.CardView
            android:layout_weight="2"
            app:cardCornerRadius="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="InOrMmUsage">
            <ImageView
                android:id="@+id/image_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/black_adam"
                android:scaleType="fitXY"
                tools:ignore="ContentDescription" />
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_margin="2dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/title_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingTop="10dp"
                android:text="Black Adam"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                tools:ignore="HardcodedText,RtlSymmetry" />
            <TextView
                android:id="@+id/desc_view"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:paddingStart="16dp"
                android:paddingTop="6dp"
                android:paddingEnd="6dp"
                android:maxLines="4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="“Black Adam,” Dwayne Johnson's bid to launch a new DC Films superpower, has surpassed $300 million globally in three weeks of release, including a domestic tally of $137.4 million."
                tools:ignore="HardcodedText" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/fav_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.2k"
                    android:padding="8dp"
                    android:textColor="@color/grey"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText"
                    app:drawableStartCompat="@drawable/ic_baseline_favorite_24" />
                <TextView
                    android:id="@+id/comment_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:textSize="16sp"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/grey"
                    android:textStyle="bold"
                    android:text="200"
                    app:drawableStartCompat="@drawable/ic_baseline_comment_24"
                    tools:ignore="HardcodedText" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>